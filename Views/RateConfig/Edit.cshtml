@model RateConfig

<fieldset>
    <legend>修改</legend>
        @using (Ajax.BeginForm("Update", new AjaxOptions()
        {
            HttpMethod = "Post",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "EditV",
            OnSuccess = "Saved"
        }))
        {
            @Html.HiddenFor(m => m.Category)
            @Html.EditorForModel()
            @IconHelper.IconButton("儲存", Icon.Cancel, "btnSave", "submit")
            @IconHelper.IconButton("取消", Icon.Cancel, "btnCancel")
            @Ajax.ActionLink("刪除", "Delete", new
            {
                xEffectiveDate = Model.EffectiveDate,
                xCategory = Model.Category
            }, new AjaxOptions()
            {
                HttpMethod = "Post",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "EditV",
                OnSuccess = "Saved"
            }, IconHelper.IconAttr(Icon.Delete));
    }
</fieldset>

<script type="text/javascript">
    $(function () {
        $("#EditV").find("#EffectiveDate").attr("readonly", true)
        .end().find("select#Category").attr("disabled", true);
    });
</script>